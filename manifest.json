{
    "manifest_version": 2,

    "name": "艦これウィジェット",
    "version": "0.2.3",

    "description": "提督さん、仕事するです？艦これするです？",
    "icons" : {
        "48"  : "icon.48.png",
        "128" : "icon.128.png"
    },
    "permissions" : [
        "tabs",
        "notifications",
        "webRequest",
        "*://*/*"
    ],
    "background" : {
        "persistent" : true,
        "scripts" : [
            "src/js/definitions/ConstantMapping.js",
            "src/js/definitions/Util.js",
            "src/js/definitions/Now.js",
            "src/js/definitions/MyStorage.js",
            "src/js/definitions/Missions.js",
            "src/js/definitions/Action.js",
            "src/js/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "src/html/select.html"
    },
    "content_scripts": [
        {
            "matches" : [
                "http://www.dmm.com/netgame/social/-/gadgets/=/app_id=854854/?mode=*"
            ],
            "js" : [
                "src/js/_util.js",
                "src/js/proxy.js"
            ]
        },
        {
            "matches" : [
                "http://osapi.dmm.com/gadgets/ifr?*"
            ],
            "js" : [
                "src/js/_util.js",
                "src/js/proxy2.js"
            ]
        },
        {
            "matches" : [
                "http://osapi.dmm.com/gadgets/ifr*"
            ],
            "js" : [
                "src/js/_util.js",
                "src/js/resize.js"
            ],
            "css" : [
                "src/css/resize.css"
            ]
        }
    ]
}
